!!! HTML
!!!
%html
  %head
    %title MonsterBank
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .container#container
      %header
        = link_to(image_tag('header.png'), root_url)
      - if flash[:notice]
        #notice
          = flash[:notice]
      - if flash[:error]
        #error
          = flash[:error]
      = yield
    %footer#footer
      - if current_user
        = link_to 'Log Out', logout_path
