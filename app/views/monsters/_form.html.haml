%section
  .field#tag_list
    = render 'tag_list'

  = form_for(@monster, :html => {:id => 'edit_monster'}) do |f|
    - if @monster.errors.any?
      #error_explanation
        %h2= "#{pluralize(@monster.errors.count, "error")} prohibited this monster from being saved:"
        %ul
          - @monster.errors.full_messages.each do |msg|
            %li= msg

    .field
      .form_label= f.label :name
      .form_element= f.text_field :name, :autofocus => true, :class => :text
    .field
      .form_label= f.label :level
      .form_element= f.number_field :level, :value => @monster.level || 1, :min => 1, :max => 30
    .field
      .form_label= f.label :role
      .form_element= f.select(:role, monster_roles)
    .field
      .form_label= f.label :subrole
      .form_element= f.select(:subrole, [' ', 'Elite', 'Solo'])
    .actions
      = f.submit 'Save'

  - unless @monster.new_record?
    = form_for(@monster, :remote => true) do |f|
      .field#tag_form
        .form_label= f.label :new_tag
        .form_element= text_field_tag :new_tag, nil, :class => :text
        = f.submit 'Add Tag', :name => 'new_tag_button'
